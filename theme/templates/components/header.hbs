<div class="topbar">
  {{>components/site-title}}

  {{#if (isEnabled "search")}}
    {{>features/search}}
  {{/if}}

  <nav class="categories">
      {{#each categories as |category|}}
          <a class="categories-item" href="{{category.permalink}}">
              {{category.name}}
          </a>
      {{/each}}
  </nav>
</div>
